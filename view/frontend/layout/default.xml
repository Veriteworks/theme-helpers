<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="some.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">some-icon.png</argument>
                    <argument name="css_class" xsi:type="string">some-css-class</argument>
                    <argument name="alt_text" xsi:type="string">alternative text</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>